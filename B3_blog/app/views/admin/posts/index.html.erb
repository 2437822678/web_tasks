<html>
  <head>
    <style type="text/css">
      table.one
      {
       table-layout: fixed;
      }

      td{
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    </style>
  </head>
  <body>

<div class="container"style="padding: 50px 250px 10px;">





<div class="jumbotron">

  <h1>文章列表</h1>


     <div>
      <table  border="1" width="535px" height="50px">
        <tr>
         <td width="100px">内容</td>
         <td width="100px">标题</td>
         <td width="100px">审核结果</td>
         <td width="100px">显示</td>
         <td width="100px">删除</td>

        </tr>
      </table>
     </div>


     <% @posts.each do |post| %>

   <div>
    <table class="one" border="1" width="500px" height="50px">
      <tr>
       <td width="100px"><%= post.content %></td>

       <td width="100px"><%= post.title %></td>
       <td width="100px"><%= post.verify %></td>

       <td width="100px"><%= link_to '显示', admin_post_path(post.id) %></td>



       <td width="100px"><%= link_to '删除', admin_post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </table>
  </div>
   <% end %>


    </div>
</div>
  </body>
</html>
