<html>
  <head>
    <style type="text/css">
      table.one
      {
       table-layout: fixed;
      }

      td{
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    </style>
  </head>
  <body>




<div class="container"style="padding: 50px 0px 10px;">

<div class="jumbotron">

  <h1>文章列表</h1>

  <center>
     <div>
      <table  border="1" width="535px" height="50px">
        <tr>
         <td width="100px">内容</td>
         <td width="100px">标题</td>
         <td width="100px">显示</td>
         <td width="100px">编辑</td>
         <td width="100px">删除</td>

        </tr>
      </table>
     </div>
   </center>


     <% @posts.each do |post| %>
      <% if post.verify=='T' %>
 <center>
   <div>
    <table class="one" border="1" width="500px" height="50px">
      <tr>
       <td width="100px"><%= post.content %></td>
       <td width="100px"><%= post.title %></td>
       <td width="100px"><%= link_to '显示', post %></td>
       <% if post.user_id==session[:user_id] %>
        <td width="100px"><%= link_to '编辑', edit_post_path(post) %></td>
        <td width="100px"><%= link_to '删除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        <% if post.user_id!=session[:user_id]  %>
         <td width="100px"><%= link_to '编辑', posts_path %></td>
         <td width="100px"><%= link_to '删除', posts_path %></td>
         <% end %>

      <% end %>
      </tr>
    </table>
   </div>
</center>
   <% end %>

    </div>
</div>
  </body>
</html>
