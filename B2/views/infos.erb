<html>
  <head>
    <style type="text/css">
      table.one
      {
       table-layout: fixed;
      }

      td{
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    </style>
  </head>
  <body>

<div class="container"style="padding: 50px 250px 10px;">

  	<div class="jumbotron">
  		<center>
  		<h4>请输入id或user_id来查询留言信息</h4>
  			</center>
  	<form action="/search/info" method="post">
  		<div class="input-group">
        <center>
  			<h4> &emsp; &emsp;&emsp;
  			输入id来查询: <input type="text" name="id" />
        </h4>
      </center>
  		</div>
  		<br>
  			<div class="input-group">
          <center>
  		   <h4> &emsp; &emsp;&emsp;
  			  输入user_id查询: <input type="text" name="user_id" />
        </h4>
      </center>
  		</div>
  		<br>
  		<center>
  	<button type="submit" class="btn btn-primary btn-lg ">查询</button>
  			</center>
  	</form>
  </div>

<div class="jumbotron">
   <h3>所有留言:<h3>
     <div>
      <table  border="1" width="400px">
        <tr>
         <td width="100px">留言id</td>
         <td width="100px">留言内容</td>
         <td width="100px">用户id</td>
         <td width="100px">留言日期</td>
        </tr>
      </table>
     </div>


   <% @messages.each do |message| %>

   <div>
    <table class="one" border="1" width="500px">
      <tr>
       <td width="100px"><%= message.id %></td>
       <td width="100px"><%= message.content %></td>
       <td width="100px"><%= message.user_id %></td>
       <td width="100px"><%= message.created_at %></td>
       <td width="100px"><a href="/delete/info/<%= message.id %>">删除留言</a></td>
      </tr>
    </table>
   </div>





   <% end %>

     <a href="/show/new">添加留言</a>

      <a href="/return">返回上一级</a>
    </div>
</div>
  </body>
</html>


<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<td><%= link_to 'feedback',recent_posts_path %></td>
